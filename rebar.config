%%-*- mode: erlang -*-
{minimum_otp_vsn, "22.0"}.
{erl_opts, [warnings_as_errors]}.
{cover_enabled, true}.
{edoc_opts, [{preprocess, true}]}.

{xref_checks, [undefined_function_calls]}.

{deps, [{mochiweb, "3.1.1"}]}.

{eunit_opts, [
              no_tty,
              {report, {eunit_progress, [colored, profile]}}
             ]}.

{profiles,
 [{test,
   [{deps, [meck,
            {ibrowse, "4.4.1"}
           ]},
    {erl_opts, [debug_info]}
   ]}
 ]}.
